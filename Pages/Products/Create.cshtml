@page 
@model ECommerceApp.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}
<h1>Create Product</h1>
<form method="post">
    <div class="mt-3">
        <label asp-for="Product.Name" class="form-label">Name</label>
        <input asp-for="Product.Name" type="text" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
   <div class="mt-3">
        <label asp-for="Product.Price" class="form-label">Price</label>
        <input asp-for="Product.Price" type="number" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
   </div>
    <div class="mt-3">
          <label asp-for="Product.CategoryId" class="form-label">CategoryId</label>
          <input asp-for="Product.CategoryId" type="number" class="form-control" />
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
